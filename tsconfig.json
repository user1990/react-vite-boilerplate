{
  "compilerOptions": {
    "target": "ESNext",
    "importHelpers": true,
    "removeComments": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"],
      "app/*": ["./src/app/*"],
      "config/*": ["./src/config/*"],
      "hooks/*": ["./src/hooks/*"],
      "assets/*": ["./src/assets/*"],
      "layouts/*": ["./src/layouts/*"],
      "utils/*": ["./src/utils/*"],
      "context/*": ["./src/context/*"],
      "models/*": ["./src/models/*"],
      "types/*": ["./src/types/*"],
      "routes/*": ["./src/routes/*"],
      "constants/*": ["./src/constants/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
